{
  "name": "nestjs-mongodb-logger",
  "version": "1.0.7",
  "description": "Production-ready MongoDB logging package for NestJS with optimized batch processing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "prepare": "pnpm run clean && pnpm run build",
    "prepublishOnly": "pnpm run lint && pnpm run test"
  },
  "keywords": [
    "nestjs",
    "mongodb",
    "logging",
    "batch",
    "production",
    "typescript"
  ],
  "author": "dongtran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dongitran/nestjs-mongodb-logger.git"
  },
  "bugs": {
    "url": "https://github.com/dongitran/nestjs-mongodb-logger/issues"
  },
  "homepage": "https://github.com/dongitran/nestjs-mongodb-logger#readme",
  "packageManager": "pnpm@10.13.1",
  "peerDependencies": {
    "@nestjs/common": "11.1.6",
    "@nestjs/core": "11.1.6",
    "mongodb": "^6.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@nestjs/common": "11.1.6",
    "@nestjs/core": "11.1.6",
    "@nestjs/testing": "11.1.6",
    "@types/jest": "30.0.0",
    "@types/node": "24.3.0",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "eslint": "9.34.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "jest": "30.0.5",
    "mongodb": "^6.3.0",
    "prettier": "^3.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "^7.8.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.40.0"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "uuid": "11.1.0"
  }
